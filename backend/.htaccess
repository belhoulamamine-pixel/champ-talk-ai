<IfModule mod_headers.c>
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "POST, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization, Accept, X-Requested-With"
    Header always set Access-Control-Max-Age "86400"
</IfModule>

<IfModule mod_rewrite.c>
    RewriteEngine On
    # Short-circuit CORS preflight before hitting PHP if the host blocks it
    RewriteCond %{REQUEST_METHOD} =OPTIONS
    RewriteRule ^ - [R=204,L]
</IfModule>

# Ensure PHP still handles normal requests
<FilesMatch "\.php$">
    SetHandler application/x-httpd-php
</FilesMatch>


